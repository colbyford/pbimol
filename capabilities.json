{
    "dataRoles": [
        {
            "displayName": "Protein Structure",
            "name": "proteinData",
            "kind": "Grouping",
            "description": "PDB or CIF format protein structure data"
        },
        {
            "displayName": "Title",
            "name": "titleData",
            "kind": "Grouping",
            "description": "Optional title/name for each protein structure"
        }
    ],
    "objects": {
        "displaySettings": {
            "displayName": "Display Settings",
            "properties": {
                "style": {
                    "displayName": "Protein Style",
                    "type": {
                        "enumeration": [
                            { "value": "cartoon", "displayName": "Cartoon" },
                            { "value": "stick", "displayName": "Stick" },
                            { "value": "line", "displayName": "Line" },
                            { "value": "cross", "displayName": "Cross" },
                            { "value": "sphere", "displayName": "Sphere" },
                            { "value": "surface", "displayName": "Surface" }
                        ]
                    }
                },
                "colorScheme": {
                    "displayName": "Color Scheme",
                    "type": {
                        "enumeration": [
                            { "value": "chain", "displayName": "By Chain" },
                            { "value": "residue", "displayName": "By Residue" },
                            { "value": "spectrum", "displayName": "Spectrum" },
                            { "value": "ss", "displayName": "Secondary Structure" },
                            { "value": "default", "displayName": "Default" }
                        ]
                    }
                },
                "backgroundColor": {
                    "displayName": "Background Color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "spin": {
                    "displayName": "Auto Rotate",
                    "type": {
                        "bool": true
                    }
                }
            }
        },
        "gridSettings": {
            "displayName": "Grid Settings",
            "properties": {
                "columns": {
                    "displayName": "Columns",
                    "description": "Number of columns in the grid (0 for auto)",
                    "type": {
                        "numeric": true
                    }
                },
                "showTitles": {
                    "displayName": "Show Titles",
                    "description": "Display molecule titles in each cell",
                    "type": {
                        "bool": true
                    }
                }
            }
        },
        "surfaceSettings": {
            "displayName": "Surface Settings",
            "properties": {
                "showSurface": {
                    "displayName": "Show Surface",
                    "description": "Display a translucent surface overlay on the structure",
                    "type": {
                        "bool": true
                    }
                },
                "surfaceOpacity": {
                    "displayName": "Surface Opacity",
                    "description": "Opacity of the surface (0-100%)",
                    "type": {
                        "numeric": true
                    }
                },
                "surfaceColorScheme": {
                    "displayName": "Surface Color Scheme",
                    "type": {
                        "enumeration": [
                            { "value": "chain", "displayName": "By Chain" },
                            { "value": "residue", "displayName": "By Residue" },
                            { "value": "spectrum", "displayName": "Spectrum" },
                            { "value": "ss", "displayName": "Secondary Structure" },
                            { "value": "default", "displayName": "Default" }
                        ]
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "table": {
                "rows": {
                    "select": [
                        {
                            "for": {
                                "in": "proteinData"
                            }
                        },
                        {
                            "for": {
                                "in": "titleData"
                            }
                        }
                    ],
                    "dataReductionAlgorithm": {
                        "top": {
                            "count": 100
                        }
                    }
                }
            }
        }
    ],
    "privileges": []
}
